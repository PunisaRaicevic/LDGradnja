{
  "name": "ldgradnja",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "npm run build && electron electron/main.js",
    "electron:build": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "@capacitor-community/file-opener": "^8.0.0",
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0",
    "@capacitor/filesystem": "^8.1.2",
    "@capacitor/ios": "^8.1.0",
    "@capacitor/live-updates": "^0.5.0",
    "@supabase/supabase-js": "^2.95.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dxf-parser": "^1.1.2",
    "jspdf": "^4.1.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-pdf": "^10.3.0",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.11"
  },
  "main": "electron/main.js",
  "author": "LDGradnja",
  "description": "LDGradnja - Aplikacija za upravljanje graÄ‘evinskim projektima",
  "build": {
    "appId": "com.ldgradnja.desktop",
    "productName": "LDGradnja",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "package.json",
      {
        "from": "dist",
        "to": "dist",
        "filter": ["**/*"]
      },
      {
        "from": "electron",
        "to": "electron",
        "filter": ["**/*"]
      }
    ],
    "extraMetadata": {
      "main": "electron/main.js",
      "type": "commonjs"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.13",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  }
}
